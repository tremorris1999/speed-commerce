{
  "compilerOptions": {
    "allowJs": false,
    "target": "ES2017",
    "module": "ES2020",
    "lib": ["es2020", "DOM"],
    "jsx": "react-jsx",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "incremental": true,
    "isolatedModules": true,
    "paths": {
      "@speed-commerce/ui": ["packages/bolt-ui/src/index.ts"],
      "@speed-commerce/web": ["packages/sc-web/src/index.ts"]
    }
  },
  "include": ["packages/**/*"]
}
